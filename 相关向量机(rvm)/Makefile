#
# Makefile.LINUX
#
#
# If you compile, change the name to Makefile.in.
#
#
 
#-----------------------------------------------------------------------------
# Shell
#-----------------------------------------------------------------------------

SHELL = /bin/sh

#-----------------------------------------------------------------------------
# Platform
#-----------------------------------------------------------------------------

PLAT = LINUX

#-----------------------------------------------------------------------------
# Libraries and includes
#-----------------------------------------------------------------------------
 
BLLIB = ./lib/blas_LINUX.a
CBLIB = ./lib/cblas_$(PLAT).a

#-----------------------------------------------------------------------------
# Compilers
#-----------------------------------------------------------------------------

CC = gcc
FC = gfortran
LOADER = $(FC)

#-----------------------------------------------------------------------------
# Flags for Compilers
#-----------------------------------------------------------------------------

CFLAGS = -O3 -DADD_
FFLAGS = -O3  

#-----------------------------------------------------------------------------
# Archive programs and flags
#-----------------------------------------------------------------------------

ARCH = ar
ARCHFLAGS = cr
RANLIB = ranlib


all: himqtt

himqtt: 
	$(CC) -std=c99 -c $(CFLAGS) -I../src main.c himqtt_rvm.c
	$(LOADER) -o test_rvm main.o himqtt_rvm.o  ./lib/cblas_LINUX.a  ./lib/blas_LINUX.a  ./lib/liblapack.a ./lib/libtmglib.a ./lib/librefblas.a


   
clean:
	rm -f *.o test_rvm
